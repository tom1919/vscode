// Place your key bindings in this file to override the defaults
[
    {
        "key": "ctrl+1",
        "command": "workbench.view.explorer"
    },
    {
        "key": "ctrl+2", 
        "command": "outline.focus"
    },
    {
        "key": "ctrl+3",
        "command": "workbench.action.focusFirstEditorGroup"
    },    
    {
        "key": "ctrl+4",
        "command": "workbench.action.focusSecondEditorGroup"
    },      
    {
        "key": "ctrl+5",
        "command": "jupyter.openVariableView",
        "when": "isWorkspaceTrusted && !notebookKernel || isWorkspaceTrusted && notebookKernel =~ /^ms-toolsai.jupyter\\//"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.toggleSidebarVisibility"
    },    
    {
        "key": "alt+w",
        "command": "workbench.action.togglePanel"
    },    
    {
        "key": "alt+e",
        "command": "workbench.action.terminal.toggleTerminal",
        "when": "terminal.active"
    },    
    {
        "key": "alt+r",
        "command": "workbench.action.chat.toggle"
    },  
    {
        "key": "alt+t",
        "command": "cSpell.toggleEnableForGlobal"
    },         
    {
        "key": "alt+p",
        "command": "workbench.action.pinEditor"
    },    
    {
        "key": "alt+u", 
        "command": "workbench.action.unpinEditor"
    },    
    {
        "key": "ctrl+r",
        "command": "workbench.action.closeActiveEditor"
    },    
    {
        "key": "ctrl+t",
        "command": "workbench.action.closeAllEditors"
    },    
    {
        "key": "ctrl+g",
        "command": "editor.action.revealDefinition",
        "when": "editorHasDefinitionProvider && editorTextFocus"
    },    
    {
        "key": "ctrl+[",
        "command": "workbench.action.gotoSymbol"
    },    
    {
        "key": "ctrl+'",
        "command": "jupyter.createnewinteractive"
    },
    {
        "key": "ctrl+]",
        "command": "jupyter.debugcurrentcell.palette",
        "when": "isWorkspaceTrusted && !jupyter.webExtension"
    },
]
